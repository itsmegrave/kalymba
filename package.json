{
  "private": true,
  "name": "kalymba",
  "description": "Kalymba RPG game system for Foundry VTT",
  "license": "GNU GPLv3",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/itsmegrave/kalymba"
  },
  "bugs": {
    "url": "https://github.com/itsmegrave/kalymba/issues"
  },
  "contributors": [
    {
      "name": "itsmegrave",
      "email": "itsmegrave@outlook.com"
    }
  ],
  "type": "module",
  "scripts": {
    "build": "gulp build",
    "build:watch": "gulp watch",
    "link-project": "gulp link",
    "clean": "gulp clean",
    "clean:link": "gulp link --clean",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts,.js,.cjs .",
    "lint:fix": "eslint --ext .ts,.js,.cjs --fix .",
    "format": "prettier --write \"./**/*.(ts|js|cjs|json|yml|scss)\"",
    "postinstall": "husky install",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "^9.249.4",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@rollup/stream": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@typhonjs-fvtt/eslint-config-foundry.js": "^0.8.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.1",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "gulp-sourcemaps": "^3.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "rollup": "^2.79.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "yargs": "^17.3.1"
  },
  "lint-staged": {
    "*.(ts|js|cjs)": "eslint --fix",
    "*.(json|yml|scss)": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
